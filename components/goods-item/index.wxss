.goods-item {
  display: flex;
  position: relative;
  padding: 10rpx 0 10rpx 15rpx;
}
.goods-item-link {
  display: flex;
  align-items: center;
}
.goods-item__check-bar {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 35rpx;
}
.goods-item__image {
  width: 190rpx;
  height: 190rpx;
  flex-shrink: 0;
}
.goods-item__info {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  padding: 26rpx 0;
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #434343;
}
.goods-item__info .goods-price {
  color: #ea4350;
}
.goods-item__info .goods-name {
  display: -webkit-box;
  margin-bottom: 25rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  line-clamp: 3;
  text-overflow: ellipsis;
  overflow: hidden;
}
.goods-item__info .goods-body .goods-count {
  margin-right: 13rpx;
  font-size: 28rpx;
}
.goods-item__info .goods-body,
.goods-item__option {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}
.goods-item__option {
  position: absolute;
  align-items: center;
  right: 13rpx;
  bottom: 28rpx;
  color: #8a8a8a;
  z-index: 10;
}
.goods-item__option .goods-num {
  margin: 0 22rpx;
  font-size: 32rpx;
}
.goods-btn {
  font-size: 40rpx;
}
