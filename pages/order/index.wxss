page {
  background-color: #f9f9f9;
}
.order {
  padding: 95rpx 0 30rpx;
}
.order-nav-bar {
  position: fixed;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 88rpx;
  left: 0;
  top: 0;
  right: 0;
  background-color: #fff;
  color: #676767;
}
.order-nav-bar__item {
  width: 184rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
}
.order-nav-bar__item.active {
  font-weight: bold;
  border-bottom: 3px solid #ea4350;
  color: #3d3d3d;
}
.order-list__item {
  padding: 39rpx 30rpx 38rpx 32rpx;
  margin-bottom: 13rpx;
  font-size: 30rpx;
  background-color: #fff;
}
.order-list__item .order-item-field {
  display: flex;
  justify-content: space-between;
}
.order-list__item .order-item-field + .order-item-field {
  margin-top: 26rpx;
}
.order-list__item .order-label {
  color: #696969;
}
.order-list__item .order-content {
  color: #434343;
}
.order-list__item .order-price .order-content {
  color: #ea4350;
}
.order-list--none {
  margin-top: 300rpx;
  text-align: center;
  font-size: 38rpx;
  color: #676767;
}
.order-list--last-page {
  margin-top: 40rpx;
  padding-bottom: 30rpx;
  text-align: center;
  font-size: 38rpx;
  color: #676767;
}
