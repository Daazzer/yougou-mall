page {
  background-color: #fafafa;
}
.user {
  padding-bottom: 140rpx;
  padding-bottom: calc(140rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}
.user__info {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 350rpx;
  margin-bottom: 20rpx;
}
.user__info .user-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background: no-repeat center / cover;
  z-index: -1;
  filter: blur(2px);
}
.user__info .user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 32rpx;
  color: #fff;
}
.user__info .user-info image {
  width: 172rpx;
  height: 172rpx;
  margin-bottom: 16rpx;
  border-radius: 50%;
}
.user__info .login-btn {
  padding: 19rpx 122rpx;
  border-radius: 8rpx;
  font-size: 36rpx;
  color: #fff;
  background-color: #07c160;
}
.user__main {
  padding: 0 12rpx;
}
.user__main .order-option,
.user__main .user-option {
  background-color: #fff;
}
.user__main .order-option {
  padding: 30rpx 0 30rpx;
  margin-bottom: 20rpx;
}
.user__main .order-option,
.user__main .order-option__item {
  display: flex;
  justify-content: space-around;
}
.user__main .order-option__item {
  flex-direction: column;
  align-items: center;
  font-size: 28rpx;
  color: #474747;
}
.user__main .order-option__item.active {
  color: #ea4350;
}
.user__main .order-option__item .iconfont {
  margin-bottom: 16rpx;
  font-size: 60rpx;
}
.user__main .user-option {
  padding: 0 34rpx 0 28rpx;
}
.user__main .user-option__item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: auto;
  padding: 30rpx 10rpx;
  font-size: 30rpx;
  border: 0;
  border-radius: 0;
  color: #434343;
}
.user__main .user-option__item::after {
  content: none;
}
.user__main .user-option__item .iconfont {
  margin-right: 28rpx;
  font-size: 50rpx;
}
.user__main .user-option-content {
  display: flex;
  justify-content: center;
  align-items: center;
}
