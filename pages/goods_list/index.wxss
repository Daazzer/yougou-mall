.goods-list-container {
  padding-bottom: 140rpx;
  padding-bottom: calc(140rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}
.goods-list-container.pt-100_88 {
  padding-top: 188rpx;
}
.sort {
  display: flex;
  justify-content: space-between;
  top: 0;
  height: 88rpx;
  padding: 0 48rpx;
  background-color: #fff;
}
.sort.fixed {
  position: fixed;
  top: 100rpx;
  left: 0;
  right: 0;
  transition: top .3s .5s;
  z-index: 50;
}
.sort__item {
  width: 184rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 30rpx;
  color: #676767;
}
.sort__item.active {
  border-bottom: 3px solid #ea4350;
  font-weight: bold;
  color: #3d3d3d;
}
.goods-list {
  padding: 0 26rpx;
}
.goods-list--none {
  margin-top: 100rpx;
  text-align: center;
  font-size: 38rpx;
  color: #676767;
}
.goods-list--last-page {
  margin-top: 40rpx;
  padding-bottom: 30rpx;
  text-align: center;
  font-size: 38rpx;
  color: #676767;
}
