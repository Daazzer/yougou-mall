.category {
  padding-bottom: 140rpx;
  padding-bottom: calc(140rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}
.category-nav-list {
  position: fixed;
  left: 0;
  top: 100rpx;
  width: 180rpx;
  height: calc(100vh - 213rpx);
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  background-color: #f3f3f3;
  z-index: 5;
}
.category-nav-list__item {
  position: relative;
  padding: 40rpx 0;
  text-align: center;
  font-size: 30rpx;
  font-weight: 500;
  color: #585858;
}
.category-nav-list__item.active {
  color: #ea4350;
}
.category-nav-list__item.active::before {
  content: "";
  position: absolute;
  left: 0;
  top: 36rpx;
  display: block;
  width: 5rpx;
  height: 50rpx;
  background-color: #ea4350;
}
.category-list {
  padding-top: 100rpx;
  padding-left: 180rpx;
}
.category-title {
  padding-top: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
  font-size: 32rpx;
  color: #575757;
}
.category-title__text {
  margin: 0 12rpx;
  font-weight: bold;
}
.goods-list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 35rpx;
}
.goods-list__item {
  margin: 0 0 35rpx 35rpx;
  font-size: 24rpx;
  color: #2e2e2e;
  width: 140rpx;
  word-break: break-all;
}
.goods-list__item:nth-child(3n + 1) {
  margin-left: 0;
}
.goods-list__item navigator {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.goods-list__item image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
}
